{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "types/**/*.d.ts"  // Include the custom type definitions
  ],
  "exclude": ["node_modules"]
}
