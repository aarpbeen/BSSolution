{
    "compilerOptions": {
      "target": "ES2020",                    // Use modern JavaScript syntax
      "module": "NodeNext",                  // For using ES modules
      "moduleResolution": "NodeNext",        // Ensure module resolution matches the NodeNext module format
      "esModuleInterop": true,               // Allow default imports from CommonJS modules
      "strict": true,                        // Enable strict type-checking options
      "skipLibCheck": true,                  // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true // Ensure file name casing is consistent
    },
    "include": ["./**/*.ts"],                 // Include all TypeScript files
    "exclude": ["node_modules"]               // Exclude the node_modules directory
  }
  